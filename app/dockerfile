# ===== build (prod) =====
FROM node:22-alpine AS build
WORKDIR /repo
RUN apk add --no-cache libc6-compat

COPY package.json package.json ./

COPY app/package.json ./app/package.json
COPY server/package.json ./server/package.json

RUN npm install -w app --include-workspace-root=false

# คัดลอกโค้ดทั้ง repo แล้ว build ที่โฟลเดอร์ app
COPY . .
WORKDIR /repo/app

ARG VITE_API_BASE
ARG VITE_MY_IMAGE_PATH
# 2. ประกาศเป็น ENV ชั่วคราวเพื่อให้คำสั่ง npx vite build มองเห็น
ENV VITE_API_BASE=$VITE_API_BASE
ENV VITE_MY_IMAGE_PATH=$VITE_MY_IMAGE_PATH

RUN npx vite build

# ===== run (prod) =====
FROM node:22-alpine AS run
WORKDIR /app
RUN npm i -g serve
# คัดลอกผล build เท่านั้น
COPY --from=build /repo/app/dist ./dist
USER node
EXPOSE 5173
CMD ["serve", "-s", "dist", "-l", "5173"]

# ใช้ Node.js Alpine image ที่เบา
FROM node:22-alpine AS dev

WORKDIR /app

RUN apk add --no-cache libc6-compat

# copy root lockfile (อยู่ที่ repo root)
COPY package-lock.json package.json ./

# copy package.json ของ workspace app
COPY app/package.json ./app/package.json

# install deps เฉพาะ workspace app
RUN npm ci -w app --include-workspace-root=false

# copy โค้ดทั้งหมด
COPY . .

WORKDIR /app
EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173", "--strictPort"]
